<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Hajri</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="min-h-screen bg-white dark:bg-[#121212] flex items-center justify-center p-4 font-sans">
    <div class="w-full max-w-md bg-[#f9f9f9] dark:bg-[#1e1e1e] p-6 rounded-2xl shadow-lg border border-[#e0e0e0] dark:border-[#333333]">
      <h2 class="text-2xl font-semibold text-[#111] dark:text-[#f9f9f9] mb-6 text-center">
        Login to Hajri
      </h2>

      <form action="/auth/login" method="POST" class="space-y-4">
        <!-- Email -->
        <div>
          <label for="email" class="block mb-1 text-sm text-[#555] dark:text-[#aaa]">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            required
            class="w-full p-2 rounded border border-[#e0e0e0] dark:border-[#333333] bg-white dark:bg-[#1a1a1a] text-[#111] dark:text-[#f9f9f9]"
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block mb-1 text-sm text-[#555] dark:text-[#aaa]">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            required
            class="w-full p-2 rounded border border-[#e0e0e0] dark:border-[#333333] bg-white dark:bg-[#1a1a1a] text-[#111] dark:text-[#f9f9f9]"
          />
        </div>

        <!-- Role -->
        <div>
          <label for="role" class="block mb-1 text-sm text-[#555] dark:text-[#aaa]">Role</label>
          <select
            name="role"
            id="role"
            class="w-full p-2 rounded border border-[#e0e0e0] dark:border-[#333333] bg-white dark:bg-[#1a1a1a] text-[#111] dark:text-[#f9f9f9]"
          >
            <option value="admin">Admin</option>
            <option value="hr">HR</option>
            <option value="employee" selected>Employee</option>
          </select>
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full p-2 rounded bg-[#2684FF] text-white hover:bg-[#1e6fcb] transition"
        >
          Login
        </button>
      </form>
    </div>
  </body>
</html>
